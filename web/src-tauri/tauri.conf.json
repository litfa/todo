{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "todo",
  "version": "../package.json",
  "identifier": "com.ltfei.todo",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "windows": [
      {
        "label": "todo",
        "title": "todo",
        "width": 1200,
        "height": 800,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["my-todo"]
      },
      "mobile": [
        { "host": "192.168.252.195:5173", "pathPrefix": ["/open"] },
        { "host": "another.site.br" }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
